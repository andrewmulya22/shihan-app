<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- Personal stylesheet -->
    <link rel="stylesheet" href="../assets/style.css">

    <!-- Logout button css -->
    <link rel="stylesheet" href="../assets/lgt-btn.css">

    <!-- Montserrat font -->
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>

    <title>Main Page</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="#">
            <img src="assets/Assets/Logo.png" style="height: 50px; width: auto; margin-left: 15px;">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/user">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/explore">Find</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">FAQ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/account">Account</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <div class="input-group">
                    <input class="form-control searchValue" type="search" placeholder="Search" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-primary my-2 my-sm-0 buttonSearch" type="submit" value="submit">Search</button>
                    </div>
                </div>
                <!-- Logout button -->
                <div class="navigation">
                    <a class="logout-btn" href="#">
                        <img class="powerbuttonimg" src="../assets/Assets/powerbutton.png">
                        <div class="logout">LOGOUT</div>
                    </a>
                </div>
            </form>
        </div>
    </nav>

    <div class="container-fluid content">
        <div class="row">
            <div class="col-sm-3 sidenav">
                <ul>
                    <li class="sidenav-title">Grup Anda</li>
                    <% for(var i = 0; i<result.length; i++){ %>
                        <% var templink = result[i].LINK_MAPEL %>
                            <% var tempname = result[i].NAMA_MAPEL %>
                                <li>
                                    <a href="/category/<%= tempname %>"><img src="<%= templink %>" style="padding-right: 15px;"><%= tempname %></a>
                                </li>
                                <% } %>
                </ul>
            </div>
            <div class="col-sm-9 mainbd">

                <h2><strong>Your post</strong></h2>

                <!-- Button trigger modal -->
                <form class="form-inline whatsinmodal">
                    <div class="form-group whatsinstatic">
                        What's in your mind?
                    </div>
                    <button type="button" class="btn btn-primary whatsinbutton" data-toggle="modal" data-target="#staticBackdrop">
                        Make a post
                    </button>
                </form>

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="staticBackdropLabel">What's in your mind?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form class="needs-validation">
                                    <div class="form-group">
                                        <label for="whatsintitle">Title</label>
                                        <input type="email" class="form-control" id="validationCustom03">
                                    </div>
                                    <div class="form-group">
                                        <label for="whatsincategory">Category</label>
                                        <select class="form-control" id="validationCustom04">
                                            <option selected disabled value="">Mata Kuliah</option>
                                <% for(i=0; i<length; i++){ %>
                                    <option id="<%= result[i].NAMA_MAPEL %>"><%= result[i].NAMA_MAPEL %></option>
                                <% } %>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="whatsintopic">Topic</label>
                                        <select class="form-control" id="validationCustom05">
                                            <option selected disabled value="">Topic</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="whatsindescription">Description</label>
                                        <textarea class="form-control" id="postDesc" rows="10"></textarea>
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary postSubmit">Post</button>
                            </div>
                        </div>
                    </div>
                </div>

                <% for(var i = 0;i<length2; i++){ %>
                    <% var temptitle = result2[i].judul %>
                        <% var tempdesc = result2[i].deskripsi %>
                            <% var templink = result2[i].id %>
                                <a href="/post/<%=templink %>">
                                    <h3 style="margin-top: 20px">
                                        <%= temptitle %>
                                    </h3>
                                </a>
                                <p>
                                    <%= tempdesc %>
                                </p>
                                <hr>
                                <% } %>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

    <!-- Option 2: jQuery, Popper.js, and Bootstrap JS
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    -->
    <script>
        $(function() {
            $('.buttonSearch').on("click", function(e) {
                e.preventDefault()
                var str = $(".searchValue").val()
                location.href = "/explore/" + str
            })
            $("#validationCustom04").change(function() {
                $('#validationCustom05').html('')
                $.ajax({
                    type: "POST",
                    url: "/showTopics",
                    data: {
                        topic: $(this).val()
                    },
                    success: function(res) {
                        if (res != "Null") {
                            for (i = 0; i < res.length; i++) {
                                $('#validationCustom05').append($('<option>', {
                                    text: res[0].nama_topik
                                }))
                            }
                        }
                    }
                })
            })
            $('.logout-btn').click(function(e) {
                e.preventDefault()
                $.ajax({
                    type: "POST",
                    url: "/logout",
                    success: function(res) {
                        location.href = "/"
                    }
                })
            })
            $('.postSubmit').on("click", function(e) {
                e.preventDefault()
                let postText = $("#validationCustom03").val()
                let matkul = $("#validationCustom04").val()
                let topic = $("#validationCustom05").val()
                let postDesc = $("#postDesc").val()
                if (matkul != null && topic != null) {
                    $.ajax({
                        type: "POST",
                        url: "/user",
                        data: {
                            postText,
                            matkul,
                            topic,
                            postDesc
                        },
                        success: function(res) {
                            location.href = "/"
                        }
                    })
                } else console.log("show error box")
            })
        })
    </script>

</body>

</html>
